# Используем официальный образ Go
FROM golang:1.18

# Устанавливаем рабочую директорию для приложения
WORKDIR /app

# Копируем все исходники в рабочую директорию контейнера
COPY . .

# Компилируем Go приложение
RUN go build -o cron-job-dispatcher .

# Запускаем Go приложение
CMD ["./cron-job-dispatcher"]
